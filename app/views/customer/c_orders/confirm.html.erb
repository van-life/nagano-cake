<h2>注文情報確認</h2>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart| %>
        <tr>
          <td>
            <%= attachment_image_tag(cart.item, :image, size: "100x100", fallback: "no_image.png") %>
            <%= cart.item.name %>
          </td>
          <td>
            <%= cart.item.price*1.1.floor %>
          </td>
          <td><%= cart.quantity %></td>
          <td>
            <%= cart.item.price*cart.quantity*1.1.floor %>
          </td>
        </tr>
        <% end %>
    </tbody>
</table>

<table>
    <tr>
      <th>送料</th>
      <td>¥<%= @order.postage %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td>¥<%= @order.total_price %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td>¥<%= @order.total_price+@order.postage %></td>
    </tr>
</table>
  
<p>支払方法</p>
<p><%= @order.payment %></p>
  
<p>お届け先</p>
<p><%= "〒#{@order.postal_code} #{@order.address}"%></p>
<p><%= @order.name %></p>

<%= form_with model: @order, url: c_orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :payment %>
  <%= f.hidden_field :total_price %>
  <%= f.hidden_field :new, value: @new %>
  <%= link_to "注文情報入力へ戻る", new_c_order_path %>
  <%= f.submit "購入を確定する" %>
<% end %>
