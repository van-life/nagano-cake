<h4>注文履歴詳細</h4>

<p>注文情報</p>
<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
      <tr>
      <th>配送先</th>
      <td>
        <%= @order.postal_code %><br>
        <%= @order.address %> <br>
        <%= @order.name %>
      </td>
    </tr>
      <tr>
      <th>支払方法</th>
      <td><%= @order.payment %></td>
    </tr>
      <tr>
      <th>ステータス</th>
      <td><%= @order.order_status %></td>
    </tr>
  </tbody>
</table>

<p>請求情報</p>
<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_price %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td> 
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_price + @order.postage %></td>
    </tr>
  </tbody>
</table>

<p>注文内容</p>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <%= @order_items.items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.price*1.1.floor %></td>
      <td><%= OrderItem.find_by(item_id: item.id,order_id: @order.id) %></td>
      <td><%= item.price*1.1*OrderItem.find_by(item_id: item.id,order_id: @order.id).floor %></td>
    </tr>
  </tbody>
</table>