<div class="container">
  <div class="row">
    <h1>配送先登録/一覧</h1>
    <div class="form-horizontal">
      <%= form_with model:@address, local: true do |f| %>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "control-label" %>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <table class="table tabel-hover table-inverse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集", edit_address_path(address.id), class: "btn btn-sm btn-success" %><%= link_to "削除", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
      </tr>
      <% end %>
    </tr>
    </table>
  </div>

</div>
