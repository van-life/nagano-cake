
<div class="container">
  <h1>配送先登録</h1>
  <%= form_with model:@address, local: true do |f| %>
  <div class="row mt-3">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-3" %>
    <%= f.text_field :postal_code, class:"col-3" %>
  </div>
  <div class="row mt-3">
    <%= f.label :address, "住所", class:"col-3" %>
    <%= f.text_field :address, class:"col-3" %>
  </div>
  <div class="row mt-3">
    <%= f.label :name, "宛名", class:"col-3" %>
    <%= f.text_field :name, class:"col-3" %>
  </div>
  <div class="row my-3">
    <div class="col-offset-3">
      <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <h1>配送先一覧</h1>
  <div class="row my-3">
    <div class="col-lg-10">
      <table class="table tabel-hover table-inverse">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集", edit_address_path(address.id), class: "btn btn-sm btn-success" %><%= link_to "削除", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
        <% end %>
      </tr>
      </table>
    </div>
  </div>
</div>