
<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <h4>ジャンル一覧</h4>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, "/c_items?#{genre.id}", class: "link-style2 mx-3" %>
        <% end %>
        <h2 class="mt-3">商品一覧（全 <%= @amount %> 件）</h2>
        <div class="item-index d-flex flex-wrap mt-3">
          <% @items.each do |item| %>
            <div class="card m-2 p-3" style="width: 270px;">
              <%= link_to c_item_path(item), class: "link-style" do %>
                <div class="item-img-box2"><%= attachment_image_tag(item, :image, size:"237x158", fallback: "no_image.png")%></div>
                <p class="item-index-name mt-2 mb-0 text-body"><%= item.name %></p>
              <% end %>
              <%= "￥#{item.price*1.1.floor}" %>
            </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-center mt-4"><%= paginate @items %></div>
      </div>
    </div>
  </div>
</div>