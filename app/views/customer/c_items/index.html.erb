<div class="index">
  <div class="container">
    <div class="row my-5">
      <div class="col-md-2">
        <h2>ジャンル</h2>
        <div class="genre-box"></div>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <p>(全<%= @items.count %>件)</p> 
        <div class="item-wrap">
          <!-- @items.total_countで全レコードの取得kaminari-->
          <% @items.each do |item|  %>
          <div class="item-box">
            <div class="item-image">
              <%= link_to c_item_path(item) do %>
              <%= attachment_image_tag(item, :image, size: "100x100", fallback: "no_image.png") %>
              <% end %>
            </div>
            <div class="item-detail">
              <p>
                <%= link_to c_item_path(item) do %>
                <%= item.name %>
                <% end %>
              </p>
              <p><%= "￥#{item.price*1.1.floor}" %></p>
            </div>
          </div>
          <% end %>
        </div>
          <%= paginate @items %>
          <!--画像、名前のリンク設定-->
          <!--kaminari pagenate-->
          <!--tax = 1.1 の記述-->
      </div>
    </div>
  </div>
</div>