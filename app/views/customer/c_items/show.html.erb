<%= attachment_image_tag(@item, :image, size: "100x100", fallback:"no_image.png") %>
<%= @item.name %>
<%= @item.introduction %>
<%= "￥#{@item.price*1.1.floor}" %>

<!--個数選択-->
<!--カートに入れるボタン-->
<%= form_with(model: @cart_item , url: cart_items_path, local:true) do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
  <!--配列から選択肢の生成options_for_select-->
  <%= f.submit "カートに入れる" %>
<% end %>