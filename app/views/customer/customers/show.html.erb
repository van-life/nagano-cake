<div class="container">
  <div class="row my-3">
    <h2 class="col-2">登録情報<i class="fas fa-user"></i></h2>
    <p class="col-3 m-0 d-flex align-items-center"><%= link_to "編集する", edit_customers_path(current_customer) %></p>       
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name + " " + @customer.last_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana + " " + @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-3">
    <h2 class="col-2">配送先<i class="fas fa-shipping-fast"></i></h2>
    <p class="col-3 m-0 d-flex align-items-center"><%= link_to "一覧を見る", addresses_path %></p>       
  </div>
  <div class="row my-3">
    <h2 class="col-2">注文履歴<i class="fas fa-shopping-cart"></i></h2>
    <p class="col-3 m-0 d-flex align-items-center"><%= link_to "一覧を見る",  c_orders_path %></p>
  </div>
</div>