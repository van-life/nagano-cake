<div class="login">
  <div class="container py-5 login-form">
    <div class="row w-50 mx-auto shadow-lg bg-white bg-opacity-50">
      <%= render "customer/shared/error_messages", resource: resource %>
      <div class="mt-5">
        <span class="fs-3 offset-md-1 font-monospace login-form"><b>ログイン</b></span>
      </div>
      <div class="mt-3">
        <span class="fs-6 offset-md-1">会員の方はこちらからログイン</span>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inline">
          <%= f.label :メールアドレス, class:"offset-2 col-3 mt-3" %>
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>
    
        <div class="field">
          <%= f.label :パスワード, class:"offset-2 col-3 mt-3" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
    
        <div class="actions offset-5 mt-4">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      
      <div class="mt-3">
        <span class="fs-6 offset-md-1">会員登録がお済みでない方</span>
      </div>
      <div class="offset-2 mt-3 mb-4">
        <%= link_to "こちら", new_customer_registration_path, class: "signup-link" %>　から新規登録を行ってください.
      </div>
    </div>
  </div>
</div>