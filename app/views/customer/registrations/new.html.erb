<div>
  <div class="mt-5">
    <span class="fs-3 offset-md-1 bg-light signup-form"><b>新規会員登録</b></span>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row mt-3">
    <%= f.label :名前, class:"offset-1 col-2" %>
    （姓）　<%= f.text_field :first_name, class:"col-3", autofocus: true, placeholder:"令和" %>
    （名）　<%= f.text_field :last_name, class:"col-3", autofocus: true, placeholder:"道子" %>
  </div>

  <div class="row mt-3">
    <%= f.label :フリガナ, class:"offset-1 col-2" %>
    （セイ）<%= f.text_field :first_name_kana, class:"col-3", autofocus: true, placeholder:"レイワ" %>
    （メイ）<%= f.text_field :last_name_kana, class:"col-3", autofocus: true, placeholder:"ミチコ" %>
  </div>

  <div class="row mt-3">
    <%= f.label :メールアドレス, class:"offset-1 col-2" %>
    <%= f.email_field :email, class:"col-3", autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
  </div>

  <div class="row mt-3">
    <%= f.label :郵便番号（ハイフンなし）, class:"offset-1 col-2" %>
    <%= f.text_field :postal_code, class:"col-2", autofocus: true, placeholder:"0000000" %>
  </div>

  <div class="row mt-3">
    <%= f.label :住所, class:"offset-1 col-2" %>
    <%= f.text_field :address, class:"col-6", autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="row mt-3">
    <%= f.label :電話番号（ハイフンなし）, class:"offset-1 col-2" %>
    <%= f.telephone_field :telephone_number, class:"col-2", autofocus: true, placeholder:"00000000000" %>
  </div>

  <div class="row mt-3">
    <%= f.label :パスワード（6文字以上）, class:"offset-1 col-2" %>
    <%= f.password_field :password, class:"col-2", autocomplete: "new-password" %>
  </div>

  <div class="row mt-3">
    <%= f.label :パスワード（確認用）, class:"offset-1 col-2" %>
    <%= f.password_field :password_confirmation, class:"col-2", autocomplete: "new-password" %>
  </div>

  <div class="actions offset-3 mt-3 mb-4">
    <td></td><td></td><%= f.submit "新規登録", class:"btn btn-success btn-lg" %>
  </div>

  <% end %>


  <div class="mt-5">
    <span class="fs-3 offset-md-1 bg-light"><b>既に登録済の方</b></span>
  </div>

  <div class="offset-1 mt-3 mb-4">
    <%= render "customer/shared/links" %>　からログインしてください。
  </div>
</div>