<div>
  <%= render "admin/shared/error_messages", resource: resource %>
  <div class="mt-5 ms-5">
    <span class="fs-3 bg-light">　<b>管理者ログイン</b>　</span>
  </div>
  <div class="admin_signin mt-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <%= f.label :email, "メールアドレス", class: "col-2" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "col-5" %>
    </div>

    <div class="row justify-content-center mt-3">
      <%= f.label :password, "パスワード", class: "col-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-5" %>
    </div>

    <div class="row justify-content-center mt-5 mb-5">
      <%= f.submit "　ログイン　", class: "btn btn-primary col-2" %>
      <div class="col-1"></div>
    </div>
  <% end %>
</div>
