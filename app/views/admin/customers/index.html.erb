<div class="container my-5">
  <div class="row">
    <h2>会員一覧</h2>
  </div>
  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <td>会員ID</td>
          <td>氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.first_name %> <%= customer.last_name %>
              <% end %>
            </td>
            <td><%= customer.email%></td>
            <td>
              <% if customer.is_deleted == true %>
                <font class="text-secondary">退会</font>
              <% else %>
                <font class="text-success">有効</font>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-4"><%= paginate @customers %></div>
</div>