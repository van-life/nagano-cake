<div class="container">
  <div class="mt-3">
    <span class="fs-3 offset-md-1"><b>商品一覧</b></span>
    <p class="col-3 offset-md-1 d-flex align-items-center"><%= link_to '新規作成', new_admin_a_item_path %></p>
  </div>
  <div class="row mt-3 offset-1">
    <table class="table tabel-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @a_items.each do |a_item| %>
          <tr>
            <td><%= a_item.id %></td>
            <td><%= link_to a_item.name,admin_a_item_path(a_item.id) %></td>
            <td>￥<%= a_item.price.to_s(:delimited) %></td>
            <td><%= a_item.genre.name %></td>
            <% if a_item.status == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>