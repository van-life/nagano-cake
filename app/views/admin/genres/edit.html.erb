<div>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <%end%>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <%end%>
  
  <div>
    <h2>ジャンル編集</h2>
  </div>
  
  <div>
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <b><%= f.label :name, "ジャンル名" %></b>
      <div><%= f.text_field :name, class: "form-control" %></div>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>