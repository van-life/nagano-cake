<div>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <%end%>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <%end%>
  
  <div>
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div>
    <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
      <b><%= f.label :name, "ジャンル名" %></b>
      <div><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <%= f.submit "新規登録", class: "btn btn-success col-3 offset-1" %>
    <% end %>

    <div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th><b>ジャンル</b></th>
          </tr>
        </thead>
        <tbody>
          <% Genre.all.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>