<% if flash[:notice] %>
  <p class="bg-warning d-flex align-items-center justify-content-center text-white" style="height:30px;"><%= flash[:notice] %></p>
<%end%>
<% if flash[:alert] %>
  <p class="bg-danger d-flex align-items-center justify-content-center text-white" style="height:30px;"><%= flash[:alert] %></p>
<%end%>

<div class="conrainer">
  <div class="row mt-4">
    <div class="row col-6">
      <p class="col-2"></p>
      <p class="col-4 fs-5 bg-light">ジャンル一覧・追加</p>
    </div>
    <div class="row mt-4">
      <div class="col-1"></div>
      <div class="col-5">
        <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
          <b><%= f.label :name, "ジャンル名", class: "ms-5" %></b>
          <%= f.text_field :name, class: "ms-5", placeholder: "ジャンル名" %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-success ms-5 fs-5" %>
        <% end %>
      </div>
    </div>
    
    <div class="row mt-5">
      <div class="col-1"></div>
      <div class="col-3">
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% Genre.all.each do |genre| %>
            <tr>
              <td class="fs-5"><%= genre.name %></td>
              <td></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success fs-6" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>