<% if flash[:notice] %>
  <p class="bg-warning d-flex align-items-center justify-content-center text-white" style="height:30px;"><%= flash[:notice] %></p>
<%end%>
<% if flash[:alert] %>
  <p class="bg-danger d-flex align-items-center justify-content-center text-white" style="height:30px;"><%= flash[:alert] %></p>
<%end%>

<div class="container">
  <div class="row mt-3">
    <span class="fs-3 offset-md-1"><b>ジャンル一覧・追加</b></span>
  </div>
  <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
  <div class="row mt-3">
    <%= f.label :name, "ジャンル名", class:"offset-1 col-2" %>
    <%= f.text_field :name, class:"col-3", placeholder: "ジャンル名" %>
  </div>
  <div class="offset-3 mt-3 mb-4">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>
  <% end %>
</div>
  
<div class="container">
  <div class="row mt-3">
    <span class="fs-3 offset-md-1"><b>ジャンル一覧</b></span>
  </div>
  <div class="row my-3 offset-1">
    <div class="col-lg-10">
      <table class="table tabel-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% Genre.all.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success fs-6" %></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>